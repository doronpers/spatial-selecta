# Docker Environment Configuration for Spatial Selecta
# Copy this file to .env and configure with your values

# PostgreSQL Database Configuration
POSTGRES_DB=spatial_selecta
POSTGRES_USER=spatial_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Environment
ENVIRONMENT=production

# Apple Music API Configuration
# Get your developer token from: https://developer.apple.com/documentation/applemusicapi/getting_keys_and_creating_tokens
APPLE_MUSIC_DEVELOPER_TOKEN=your_developer_token_here
APPLE_MUSIC_USER_TOKEN=

# Apple Music Token Generation (optional, for JWT-based authentication)
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_KEY_PATH=

# API Security
# Generate secure tokens with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REFRESH_API_TOKEN=CHANGE_ME_TO_SECURE_RANDOM_TOKEN
RATING_IP_SALT=CHANGE_ME_TO_SECURE_RANDOM_SALT

# CORS Configuration
# Comma-separated list of allowed origins (NO WILDCARDS in production)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=100

# Scheduler Configuration
SCAN_INTERVAL_HOURS=48
